@using Action = TestingSystem.Models.Action

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    Action myAction = ViewData["Action"] as Action;
    if (myAction == null)
    {
        myAction=new Action();
    }
    List<TestingSystem.Models.Roles> myRoles = ViewData["RoleList"] as List<TestingSystem.Models.Roles>;
    if (myRoles == null)
    {
        myRoles = new List<TestingSystem.Models.Roles>();
    }

}

<section class="content-header">
    <h1>
        Action Detail
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>CMS</a></li>
        <li><a href="#">Action</a></li>
        <li class="active">Detail</li>
    </ol>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title"> Action Detail</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" novalidate role="form" action="@Url.Action("Detail","Role",new {area ="Admin" })" method="get">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Action Name</label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label">@myAction.ActionName</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Action Description</label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label">@myAction.Description</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Action Rules :</label>
                    <div class="col-sm-6">
                        @foreach (var item in myRoles)
                        {
                            <button class="btn" disabled>@item.RoleName</button>
                        }
                    </div>
                </div>


            </div><!-- /.box-body -->
            <div class="box-footer">
                <a href="/Admin/Action"><div class="btn">Back</div></a>
            </div><!-- /.box-footer -->
        </form>
    </div><!-- /.box -->
</section>

