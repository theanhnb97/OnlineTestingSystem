@model TestingSystem.Models.Action
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
<section class="content-header">
    <h1>
        Action
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Action</a></li>
        <li class="active">Edit</li>
    </ol>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Edit action</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" novalidate role="form" action="@Url.Action("Edit","Action",new {area ="Admin" })" method="post">
            @*@Html.AntiForgeryToken()*@
            @*@Html.HiddenFor(model => model.ActionId)*@
            <input type="hidden" name="ActionId" value="@Model.ActionId" />
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Action name</label>
                    <div class="col-sm-6">
                        <input type="text" disabled placeholder="Viết liền không dấu" value=@Model.ActionName class="form-control" name="ActionName1">
                        <input type="hidden" value="@Model.ActionName" class="form-control" name="ActionName">

                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Description</label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="Chi tiết" value="@Model.Description" class="form-control" name="Description">
                    </div>
                </div>
            </div><!-- /.box-body -->
            <div class="box-footer">
                <a href="/Admin/Action"><div ui-sref="products" class="btn btn-default">Cancel</div></a>
                <button type="submit" class="btn btn-success pull-right">Save</button>
            </div><!-- /.box-footer -->
        </form>
        <br />
</section>



