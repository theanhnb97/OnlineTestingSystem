@model TestingSystem.Models.Action
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
<section class="content-header">
    <h1>
        Thêm mới tác vụ/ hành động
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="#">Tài khoản</a></li>
        <li class="active">Thêm mới</li>
    </ol>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Thêm mới</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" novalidate role="form" action="@Url.Action("Create","Action",new {area ="Admin" })" method="post">
            @Html.AntiForgeryToken()
            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Tên tác vụ</label>
                    <div class="col-sm-6">
                        <input type="text" name="ActionName" id="ActionName" class="form-control"/>
                        @*@Html.EditorFor(model => model.ActionName, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.ValidationMessageFor(model => model.ActionName, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Chi tiết</label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="Viết liền không dấu" class="form-control" name="Description">
                    </div>
                </div>
            </div><!-- /.box-body -->
            <div class="box-footer">
                <a href="/Admin/Action"><div ui-sref="products" class="btn btn-default">Hủy</div></a>
                <button type="submit" class="btn btn-success pull-right">Lưu</button>
            </div><!-- /.box-footer -->
        </form>
        <br />
    </div>
</section>

