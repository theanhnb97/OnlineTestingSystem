@using TestingSystem.Models
@model TestingSystem.Models.Group
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int i = 0;
}

<section class="content-header">
    <h1>
        Group Details
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Group")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="@Url.Action("Details", "Group", new { id = Model.GroupId})"><i class="fa fa-dashboard"></i> Details</a></li>
    </ol>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title"> Group Details</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" novalidate role="form" action="@Url.Action("Details","Group",new {area ="Admin" })">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">GroupName</label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="width:100%; text-align: left;">@Html.DisplayFor(model => model.GroupName)</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">CreatedDate</label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="width:100%; text-align: left;">@String.Format("{0:dddd, MMMM d, yyyy}", @Model.CreatedDate)</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">UpdatedDate</label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="width:100%; text-align: left;">@String.Format("{0:dddd, MMMM d, yyyy}", @Model.UpdatedDate)</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Description</label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label" style="width:100%; text-align: left;">@Html.DisplayFor(model => model.Description)</label>
                    </div>
                </div>

            </div><!-- /.box-body -->
            <div class="box-footer">
                <button class="btn btn-sm btn-success">
                    @Html.ActionLink("Update Information", "Edit", new { id = Model.GroupId }, new { @style = "color: white;" })
                </button>
                <button class="btn btn-sm btn-success">
                    @Html.ActionLink("Back to List", "Index", new { id = Model.GroupId }, new { @style = "color: white;" })
                </button>
                <button class="btn btn-sm btn-success">
                    @Html.ActionLink("Update Account In Group", "UpdateAccount", new { id = Model.GroupId }, new { @style = "color: white;" })
                </button>
            </div><!-- /.box-footer -->
        </form>
        <div class="box-header">
            <p>Number of User: @ViewBag.Count</p>
        </div>
        <table id="example2" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Name Group</th>
                    <th>Email</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (User item in ViewBag.listUserInGroup)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>
                            @item.Name
                        </td>
                        <td>@item.UserName</td>
                        <td>@item.Roles.RoleName</td>
                    </tr>
                }

            </tbody>
        </table>
    </div><!-- /.box -->
</section>
