@using Microsoft.Ajax.Utilities
@model TestingSystem.DataTranferObject.UserDetail
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>
        User Information
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Account</a></li>
        <li class="active">Details</li>
    </ol>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title"> User Detail</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" novalidate role="form" action="@Url.Action("Detail","User",new {area ="Admin" })" method="get">
            <div class="box-body">
                <div class="form-group">
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label"><img src="@Model.Avatar"/></label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label" style="text-align: left">Full  Name : </label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label">@Model.Name</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label" style="text-align: left">Phone Number : </label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label">@Model.Phone</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label"style="text-align: left">User  Email : </label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label">@Model.Email</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label" style="text-align: left">Create  Date : </label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-6 control-label" style="text-align: left">@String.Format("{0:dddd, MMMM d, yyyy}", @Model.CreatedDate)</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label"style="text-align: left">  Status :</label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label">@Model.Status</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label"style="text-align: left">  Address  :</label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label">@Model.Address</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label"style="text-align: left">Join  Groups  :</label>
                    <div class="col-sm-6">
                        @foreach (var item in @Model.Groups)
                        {
                            <button class="btn" disabled>@item.GroupName</button>
                        }
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label"style="text-align: left"> Note    :</label>
                    <div class="col-sm-6">
                        <label for="inputEmail3" class="col-sm-2 control-label">@Model.Note</label>
                    </div>
                </div>
            </div><!-- /.box-body -->
            <div class="box-footer">
                <a href="Index"><div ui-sref="products" class="btn btn-default" disableValidation="true">Back</div></a>
            </div><!-- /.box-footer -->
        </form>
    </div><!-- /.box -->
</section>

