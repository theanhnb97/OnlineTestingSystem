@{
    ViewBag.Title = "QuestionExcelAnswer";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-sm-7" style="margin-left:25%">
    <p style="color:#FFA500;font-size:24px">Thêm câu hỏi - câu trả lời</p>
    <hr />
    <div style="color:#505050;font-size:14px">
        <form class="form-horizontal" action="@Url.Action("QuestionExcelAnswer","Question")" method="post" enctype="multipart/form-data" onSubmit="return xacNhan()">
            <div class="form-group">
                <label class="col-sm-1"></label>
                <label class="col-sm-3">Chọn file:</label>
                <div class="col-sm-7">
                    <input type="file" name="excelfile" placeholder="Chọn file excel" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-1"></label>
                <label class="col-sm-3"></label>
                <div class="col-sm-7">
                    <p style="color:darkorange">@ViewBag.ThongBao</p>
                </div>
            </div><hr />
            <div class="form-group" style="margin-bottom:200px">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary form-control">Lưu lại >></button>
                </div>
            </div>
        </form>

    </div>
</div>
<script>
    function xacNhan() {
        return confirm("Bạn có muốn lưu lại ?");
    }
</script>


